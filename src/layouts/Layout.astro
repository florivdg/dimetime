---
import '@/styles/global.css'
import { Font } from 'astro:assets'
import 'vue-sonner/style.css'
import { Toaster } from '@/components/ui/sonner'
import { apiToLocalTheme } from '@/lib/sync-settings'

const serverTheme = Astro.locals.userSettings?.themePreference ?? null
const localStorageTheme = serverTheme ? apiToLocalTheme(serverTheme) : null
---

<html lang="de">
  <head>
    <script is:inline define:vars={{ localStorageTheme }}>
      ;(function () {
        let stored = localStorage.getItem('vueuse-color-scheme')

        // Server theme takes precedence - sync to localStorage
        if (localStorageTheme) {
          localStorage.setItem('vueuse-color-scheme', localStorageTheme)
          stored = localStorageTheme
        }

        let isDark = true // default to dark
        if (stored === 'auto') {
          isDark = window.matchMedia('(prefers-color-scheme: dark)').matches
        } else if (stored === 'light') {
          isDark = false
        } else if (stored === 'dark') {
          isDark = true
        }
        document.documentElement.classList.toggle('dark', isDark)
      })()
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <Font cssVariable="--font-inter" preload />
    <title>DimeTime</title>
  </head>
  <body
    class="bg-background text-foreground min-h-screen font-sans antialiased"
  >
    <Toaster client:load />
    <slot />
  </body>
</html>
